<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
  ">
	<id>${tenant.code}_${source.code}_${stream.code}</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory>cepconfig/</outputDirectory>
			<directory>generated_src/main/cepconfig</directory>
		</fileSet>
		<fileSet>
			<directory>generated_src</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
			<include>deploymentInstructions.json</include>
			<include>migrationInstructions.json</include>
			<include>upgradeInstructions.json</include>
			<include>deleteInstructions.json</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>esbconfig/</outputDirectory>
			<directory>generated_src/main/esbconfig</directory>
			<includes>
				<include>*.xsd</include>
				<include>*.xml</include>
			</includes>
		</fileSet>		
	</fileSets>
</assembly>